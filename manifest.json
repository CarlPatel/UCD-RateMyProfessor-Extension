{
  "manifest_version": 3,
  "name": "Rate My Professor for UC Davis Schedule Builder",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://www.ratemyprofessors.com/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
  {
    "matches": ["https://my.ucdavis.edu/schedulebuilder/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }
]
}